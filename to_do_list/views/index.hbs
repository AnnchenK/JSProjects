{{#if todos.length}}
<ul>
    {{#each todos}}
        <li>
            <form method="POST">
                <label>
                    {{#if is_done}}
                    <input type="checkbox" checked name="completed">
                    {{else}}
                    <input type="checkbox" name="completed">
                    {{/if}}
                    <span>{{ name }}</span>

                    <input type="hidden" value="{{id}}" name="id">

                    <button class="btn btn-small" formaction="/complete" type="submit">Save</button>
                    <button class="btn btn-small" formaction="/delete" type="submit">Delete</button>
                </label>
            </form>
        </li>
    {{/each}}
</ul>
{{else}}
<p>No todos</p>
{{/if}}